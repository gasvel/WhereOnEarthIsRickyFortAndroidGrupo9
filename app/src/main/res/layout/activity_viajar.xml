<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/miami"
    tools:context="com.example.gaston.rickyapp.PedirPistasActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Estas en: "
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="32dp"
        android:onClick="ordenDeArresto"
        android:text="Orden de arresto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_marginTop="123dp"
        app:layout_constraintTop_toBottomOf="@+id/listaPaises" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="31dp"
        android:onClick="buscarPistas"
        android:text="Buscar pistas"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="123dp"
        app:layout_constraintTop_toBottomOf="@+id/listaPaises" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destinos recorridos:"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/listaPaises"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orden de arresto emitida a:"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ExpandableListView
        android:id="@+id/listaPaises"
        style="@android:style/Widget.DeviceDefault.ExpandableListView"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="37dp"
        android:background="?attr/colorButtonNormal"
        android:divider="@android:drawable/button_onoff_indicator_on"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</android.support.constraint.ConstraintLayout>
